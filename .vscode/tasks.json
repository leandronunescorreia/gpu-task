{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "rm -rf build",
      "problemMatcher": []
    },
    {
      "label": "config debug dawn samples-off",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-B", "build",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DWEBGPU_BACKEND=DAWN",
        "-DWEBGPU_BUILD_FROM_SOURCE=OFF",
        "-DBUILD_SAMPLES=OFF",
        "-DBUILD_TESTS=OFF"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "config debug dawn samples-on",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-B", "build",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DWEBGPU_BACKEND=DAWN",
        "-DWEBGPU_BUILD_FROM_SOURCE=OFF",
        "-DBUILD_SAMPLES=ON",
        "-DBUILD_TESTS=OFF"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build -t webgpu_compute (Debug)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "build",
        "--target", "webgpu_compute",
        "--",
        "-j$(nproc)"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },

    {
      "label": "Install lib webgpu_compute",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--install", "build"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build 01-vector-add",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build",
        "--target",
        "vector_add",
        "--",
        "-j$(nproc)"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    }
  ]
}